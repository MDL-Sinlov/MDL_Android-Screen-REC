<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mdl.sinlov.android.screen_rec.app">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name="mdl.sinlov.android.screen_rec.ScreenCaptureApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="mdl.sinlov.android.screen_rec.SettingActivity"
            android:launchMode="singleTask"
            android:screenOrientation="behind" />

        <activity
            android:name="mdl.sinlov.android.screen_rec.PreviewPictureActivity"
            android:launchMode="singleTask" />

        <service
            android:name="mdl.sinlov.android.screen_rec.ScreenCaptureService"
            android:stopWithTask="true" />
    </application>

</manifest>